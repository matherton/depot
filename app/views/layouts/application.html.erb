<!-- By naming the layout application.html.erb, it will be the layout used for all views for all controllers that donâ€™t otherwise provide a layout -->
<!DOCTYPE html> 
<html> 
<head> 
  <title>Pragprog Books Online Store</title> 
<!-- START:stylesheet - Rails helper method to generate a <link> tag --> 
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> --> 
<!-- END:stylesheet --> 
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> --> 
</head> 
<body id="store"> 
  <div id="banner">
    <!-- image tag helper --> 
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> --> 
  </div> 
  <div id="columns"> 
    <div id="side"> 
      <!-- this displays the partial so the cart is displayed in the sidebar - Chris put unless @cart.nil? so that no errors occur when @cart.nil is passed to the div as it is not defined - 'unless' is same as 'if not' -->
      <div id="cart"> 
        <%= render @cart unless @cart.nil? %>
      </div>
      <a href="http://localhost:3000">Home</a><br /> 
      <a href="http://www..../faq">Questions</a><br /> 
      <a href="http://www..../news">News</a><br /> 
      <a href="http://www..../contact">Contact</a><br /> 
      <p>Time on page load is:<br /><%= Time.now %></p>
      <!-- MA This displays the session created in store_controller.rb -->
      <p>You have accessed this page <%= pluralize( @count, 'times' ) %></p>
    </div> 
    <div id="main"> 
      <%= yield %><!-- <label id="code.depot.e.include"/> this will be the catalog page generated by index.html.erb --> 
    </div> 
  </div> 
</body> 
</html>
